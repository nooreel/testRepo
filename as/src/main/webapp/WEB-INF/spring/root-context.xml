  <property name="url" value="jdbc:mariadb://192.168.0.40:3306/newdatabase"></property>
  <property name="username" value="swtest"></property>
  <property name="password" value="swict123"></property>
</bean>

  <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
